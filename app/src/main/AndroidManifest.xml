<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="momo.kikiplus.com.kbucket"
    tools:ignore="LockedOrientationActivity">

    <uses-sdk xmlns:tools="http://schemas.android.com/tools"
        tools:overrideLibrary="android.support.constraint" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:name="AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_configuration"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory"
        android:appComponentFactory="whatevetString"
        >
        <activity
            android:name=".view.Activity.IntroActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.Activity.WriteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".view.Activity.WriteDetailActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.PassWordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.ShareListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.ShareDetailActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.Activity.ConfigurationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.SetNickNameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.SetBackColorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.BucketListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.QuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.NoticeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.PushPopupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.RankListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="momo.kikiplus.deprecated.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.AddBucketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Activity.WriteMemoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity android:name=".view.Activity.DBMgrActivity"
            android:screenOrientation="portrait"/>

        <!-- 커스톰 위젯 -->
        <receiver
            android:name=".view.Object.KWidget"
            android:label="가지">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_configuration" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.kiki.View.widget.ACTION_WRITE_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_LIST_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_SHARE_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_OURS_BUCKET_EVENT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".view.Object.KMemoWidget"
            android:label="다짐">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/memo_widget_configuration" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.kiki.View.widget.ACTION_MEMO_WRITE_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_MEMO_REFRESH_EVENT" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE_OPTIONS" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".view.Object.KWidgetReceiver"
            android:label="widgetBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.kiki.View.widget.ACTION_WRITE_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_LIST_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_SHARE_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_OURS_BUCKET_EVENT" />
                <action android:name="com.kiki.View.widget.ACTION_MEMO_WRITE_EVENT" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/memo_widget_configuration" />
        </receiver>

        <!-- FCM 관련 -->
        <service
            android:name="momo.kikiplus.refactoring.FireMessingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- FCM 관련 END -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9950741145331464~2693538232">
        </meta-data>
    </application>

</manifest>