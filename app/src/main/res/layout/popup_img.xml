<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp">

    <LinearLayout
        android:id="@+id/popup_panel1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#FFFFBB33"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/icon72"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/basic_title_textview"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/img_popup_layout_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/popup_close_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#FF99CC00"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/popup_panel2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/popup_panel1"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/basic_body_imageiew"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_panel3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/popup_panel2"
        android:background="#FFFFBB33"
        android:gravity="center">

        <Button
            android:id="@+id/popup_ok_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#FF99CC00"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
