<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/write_meo_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFBB33"
            android:text="@string/widget_memo_title"
            android:textColor="#000" />

        <Button
            android:id="@+id/write_meo_modify"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="#FFCC0000"
            android:text="@string/widget_memo_modify"
            android:textColor="#FFF" />
    </RelativeLayout>

    <EditText
        android:id="@+id/write_meo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ballon2"
        android:text="" />

</LinearLayout>
