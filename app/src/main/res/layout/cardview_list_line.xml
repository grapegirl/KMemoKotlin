<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:id="@+id/carview_main_cardview"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardview_title_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FF99CC00"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:text="2015-12-11 01:32:53"
                android:textSize="15sp" />
            .

            <RelativeLayout
                android:id="@+id/left_photo_right_textview_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/cardview_contents_imageview"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#FFCC0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/nophoto" />

                <TextView
                    android:id="@+id/cardview_contents_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/cardview_contents_imageview"
                    android:background="@drawable/edit2"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:scrollbars="vertical"
                    android:text="안녕하세요"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_textview_right_photo_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cardview_contents_imageview2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/cardview_contents_textview2"
                    android:background="#FFCC0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/nophoto" />

                <TextView
                    android:id="@+id/cardview_contents_textview2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit2"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:scrollbars="vertical"
                    android:text="안녕하세요"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
