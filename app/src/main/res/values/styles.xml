<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:buttonStyle">@style/HannaFontButtonStyle</item>
        <item name="android:textViewStyle">@style/HannaFontTextViewStyle</item>
        <item name="android:editTextStyle">@style/HannaFontEditViewStyle</item>

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- 16 API 부터 가능 -->
    <style name="HannaFontTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/hanna_font</item>
    </style>
    <style name="HannaFontEditViewStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/hanna_font</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="HannaFontButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/hanna_font</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- END -->


</resources>
